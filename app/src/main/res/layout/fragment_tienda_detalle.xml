<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvNombreTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre de la Tienda"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDescripcionTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Descripción de la Tienda"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTelefonoTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: "
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ivLlamar"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:contentDescription="Icono de llamar"
            android:focusable="true"
            android:src="@drawable/ic_llamar" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical" />

    <!-- Puedes agregar más TextViews aquí para mostrar más detalles de la tienda -->

</LinearLayout>
